{
    "name": "eslint-plugin-itgalaxy",
    "version": "47.0.0",
    "description": "itgalaxy org's ESLint rules and configs.",
    "keywords": [
        "eslint",
        "eslintconfig",
        "eslintplugin",
        "eslint-config",
        "eslint-plugin",
        "config",
        "itgalaxy",
        "javascript",
        "styleguide"
    ],
    "author": "Itgalaxy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/eslint-plugin-itgalaxy.git"
    },
    "homepage": "https://github.com/itgalaxy/eslint-plugin-itgalaxy",
    "bugs": "https://github.com/itgalaxy/eslint-plugin-itgalaxy/issues",
    "main": "index.js",
    "dependencies": {},
    "devDependencies": {
        "ava": "^0.19.0",
        "ajv-cli": "^2.1.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.17.0",
        "babel-preset-es2015": "^6.13.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^4.0.0",
        "eslint-ava-rule-tester": "^2.0.0",
        "eslint-find-rules": "^3.0.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^4.0.1",
        "nyc": "^11.0.0",
        "package-schema": "^1.0.0",
        "prop-types": "^15.5.8",
        "prettier": "^1.4.1",
        "react": "^15.0.0",
        "react-dom": "^15.0.0",
        "remark-cli": "^3.0.0",
        "remark-preset-lint-itgalaxy": "^6.0.0",
        "eslint-config-prettier": "^2.1.1",
        "eslint-plugin-ava": "^4.2.0",
        "eslint-plugin-import": "^2.3.0",
        "eslint-plugin-jsx-a11y": "^5.0.3",
        "eslint-plugin-lodash": "^2.4.2",
        "eslint-plugin-node": "^5.0.0",
        "eslint-plugin-prettier": "^2.1.2",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-react": "^7.1.0",
        "eslint-plugin-unicorn": "^2.1.1",
        "eslint-plugin-jest": "^20.0.3",
        "lint-staged": "^3.6.0",
        "husky": "^0.13.4"
    },
    "peerDependencies": {
        "eslint": "^4.0.0",
        "eslint-plugin-ava": "^4.2.0",
        "eslint-plugin-import": "^2.3.0",
        "eslint-plugin-jsx-a11y": "^5.0.3",
        "eslint-plugin-lodash": "^2.4.2",
        "eslint-plugin-node": "^5.0.0",
        "eslint-plugin-prettier": "^2.1.2",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-react": "^7.1.0",
        "eslint-plugin-unicorn": "^2.1.1",
        "eslint-plugin-jest": "^20.0.3",
        "prettier": "^1.4.1"
    },
    "engines": {
        "node": ">= 4.2"
    },
    "scripts": {
        "precommit": "lint-staged",
        "coveralls": "nyc report --reporter=text-lcov | coveralls",
        "lint:eslint-check": "eslint --print-config ./print-config/index.js | eslint-config-prettier-check",
        "lint:check-rules": "eslint-find-rules --unused lib/config/all.js",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:eslint": "eslint . --ignore-path .gitignore",
        "lint:remark": "remark . -i .gitignore -f -q",
        "lint": "npm-run-all -l -p lint:**",
        "formatter:prettier": "eslint . --fix --ignore-path .gitignore",
        "formatter": "npm-run-all -l -p formatter:**",
        "pretest": "npm run lint",
        "test": "npm run test-only",
        "test-only": "nyc ava --verbose '**/__tests__/**/*.js'",
        "release": "npmpub"
    },
    "lint-staged": {
        "*.{js,jsx,babel}": [
            "eslint --fix",
            "git add"
        ],
        "*.{md,markdown,mdown,mkdn,mkd,mdwn,mkdown,ron}": [
            "remark -f -q",
            "git add"
        ]
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "extends": [
            "./lib/config/ava.js",
            "./lib/config/node.js",
            "./lib/config/esnext.js",
            "./lib/config/prettier.js"
        ],
        "root": true
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    }
}
