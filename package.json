{
    "name": "eslint-plugin-itgalaxy",
    "version": "46.0.0",
    "description": "itgalaxy org's ESLint rules and configs.",
    "keywords": [
        "eslint",
        "eslintconfig",
        "eslintplugin",
        "eslint-config",
        "eslint-plugin",
        "config",
        "itgalaxy",
        "javascript",
        "styleguide"
    ],
    "author": "Itgalaxy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/eslint-plugin-itgalaxy.git"
    },
    "homepage": "https://github.com/itgalaxy/eslint-plugin-itgalaxy",
    "bugs": "https://github.com/itgalaxy/eslint-plugin-itgalaxy/issues",
    "main": "index.js",
    "dependencies": {},
    "devDependencies": {
        "ava": "^0.19.0",
        "ajv-cli": "^2.1.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.17.0",
        "babel-preset-es2015": "^6.13.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^3.19.0",
        "eslint-ava-rule-tester": "^2.0.0",
        "eslint-find-rules": "^1.13.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^4.0.1",
        "nyc": "^11.0.0",
        "package-schema": "^1.0.0",
        "prop-types": "^15.5.8",
        "react": "^15.0.0",
        "react-dom": "^15.0.0",
        "remark-cli": "^3.0.0",
        "remark-preset-lint-itgalaxy": "^6.0.0",
        "eslint-plugin-ava": "^4.0.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-jsx-a11y": "^5.0.1",
        "eslint-plugin-lodash": "^2.3.0",
        "eslint-plugin-node": "^4.2.0",
        "eslint-plugin-promise": "^3.4.0",
        "eslint-plugin-react": "^7.0.0",
        "eslint-plugin-unicorn": "^2.0.0",
        "eslint-plugin-jest": "^20.0.1"
    },
    "peerDependencies": {
        "eslint": "^3.19.0",
        "eslint-plugin-ava": "^4.0.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-jsx-a11y": "^5.0.1",
        "eslint-plugin-lodash": "^2.3.0",
        "eslint-plugin-node": "^4.2.0",
        "eslint-plugin-promise": "^3.4.0",
        "eslint-plugin-react": "^7.0.0",
        "eslint-plugin-unicorn": "^2.0.0",
        "eslint-plugin-jest": "^20.0.1"
    },
    "scripts": {
        "coveralls": "nyc report --reporter=text-lcov | coveralls",

        "lint:check-rules": "eslint-find-rules --unused lib/config/all.js",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:eslint": "eslint . --ignore-path .gitignore",
        "lint:remark": "remark . -i .gitignore -f -q",
        "lint": "npm-run-all -l -p lint:**",

        "pretest": "npm run lint",
        "test-only": "nyc ava --verbose '**/__tests__/**/*.js'",
        "test": "npm run test-only",

        "release": "npmpub"
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "extends": [
            "./lib/config/ava.js",
            "./lib/config/node.js",
            "./lib/config/esnext.js"
        ],
        "root": true
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    }
}
