{
    "name": "eslint-plugin-itgalaxy",
    "version": "16.0.0",
    "description": "itgalaxy org's ESLint rules and configs.",
    "keywords": [
        "eslint",
        "eslintconfig",
        "eslintplugin",
        "eslint-config",
        "eslint-plugin",
        "config",
        "itgalaxy",
        "javascript",
        "styleguide"
    ],
    "author": "Itgalaxy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/eslint-plugin-itgalaxy.git"
    },
    "homepage": "https://github.com/itgalaxy/eslint-plugin-itgalaxy",
    "bugs": "https://github.com/itgalaxy/eslint-plugin-itgalaxy/issues",
    "main": "index.js",
    "files": [
        "lib",
        "index.js"
    ],
    "dependencies": {
        "eslint-plugin-ava": "^3.0.0",
        "eslint-plugin-import": "^1.15.0",
        "eslint-plugin-jsx-a11y": "^2.2.0",
        "eslint-plugin-lodash": "^1.10.0",
        "eslint-plugin-node": "^2.0.0",
        "eslint-plugin-promise": "^2.0.0",
        "eslint-plugin-react": "^6.2.0",
        "eslint-plugin-xo": "^0.5.0"
    },
    "devDependencies": {
        "ava": "^0.16.0",
        "ajv-cli": "~0.9.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.13.0",
        "babel-preset-es2015": "^6.13.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^3.5.0",
        "eslint-ava-rule-tester": "^2.0.0",
        "eslint-find-rules": "^1.13.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^3.0.0",
        "nyc": "^8.1.0",
        "package-schema": "~1.0.0",
        "remark-cli": "^2.0.0",
        "remark-lint": "^5.0.0",
        "remark-preset-lint-itgalaxy": "^1.0.0"
    },
    "peerDependencies": {
        "eslint": "^3.5.0",
        "eslint-plugin-ava": "^3.0.0",
        "eslint-plugin-import": "^1.15.0",
        "eslint-plugin-jsx-a11y": "^2.2.0",
        "eslint-plugin-lodash": "^1.10.0",
        "eslint-plugin-node": "^2.0.0",
        "eslint-plugin-promise": "^2.0.0",
        "eslint-plugin-react": "^6.2.0",
        "eslint-plugin-xo": "^0.5.0"
    },
    "scripts": {
        "coveralls": "nyc report --reporter=text-lcov | coveralls",

        "lint:check-rules": "eslint-find-rules --unused lib/config/all.js",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:eslint": "eslint . --ignore-path .gitignore",
        "lint:remark": "remark '{**/*,*}.md' -i .gitignore -f -q",
        "lint": "npm-run-all -l -p lint:**",

        "ava": "nyc ava --verbose '**/__tests__/**/*.js'",
        "pretest": "npm run lint",
        "test": "npm run ava",

        "release": "npmpub"
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "rules": {
            "sort-keys": "off",

            "import/no-commonjs": "off"
        },
        "extends": [
            "./lib/config/ava.js",
            "./lib/config/esnext.js",
            "./lib/config/node.js"
        ],
        "root": true
    },
    "remarkConfig": {
        "presets": [
            "remark-preset-lint-itgalaxy"
        ]
    }
}
